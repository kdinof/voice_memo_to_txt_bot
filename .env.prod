# Production Environment Variables
# Copy this file to .env on your production server and fill in the values

# OpenAI API Key (same as development)
OPENAI_API_KEY=your_openai_api_key_here

# Telegram Bot Token (PRODUCTION BOT - DIFFERENT FROM DEVELOPMENT)
# Create a new bot via @BotFather on Telegram and use that token here
TELEGRAM_BOT_TOKEN=YOUR_PRODUCTION_BOT_TOKEN_HERE

# Admin User ID (same as development - your Telegram user ID)
ADMIN_USER_ID=774945142

# Production database configuration
DATABASE_DIR=/home/app/data

# Production environment flag
NODE_ENV=production